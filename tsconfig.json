{
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "es2021"
        ],
        "module": "es2022",
        "moduleResolution": "bundler",
        "types": [
            "bun-types"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "worker-configuration.d.ts"
    ]
}